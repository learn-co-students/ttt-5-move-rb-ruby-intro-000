#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

# Welcome
puts "Welcome to Tic Tac Toe!"

# Set-Up Board
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

# Get Input
puts "Where would you like to go?"
input = gets.strip

# Adjust Input
index = input_to_index(input)

# Use Input to Move
move(board, index)

# Display Board
display_board(board)
